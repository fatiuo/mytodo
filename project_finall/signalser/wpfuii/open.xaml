<Window x:Class="wpfui.open"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenAI WPF App" Height="700" Width="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="ChatTextBox" IsReadOnly="True" Margin="10" FontWeight="Bold"/>
        </ScrollViewer>
         <TextBlock Text="choose one button and Enter your Task" FontWeight="Bold" HorizontalAlignment="Center" FontSize="25" Foreground="#FF2F4F4F"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
        
            <TextBox x:Name="UserInputTextBox" Width="250" Height="100" Margin="0,0,10,0" />
            <Button Content="Stress" x:Name="button" Width="250" Height="100" Background="#FF2F4F4F" Foreground="White" FontWeight="Bold"  FontSize="30"/>
            <Button Content="MakeMove" x:Name="button1" Width="250" Height="100" Background="#FF2F4F4F" Foreground="White" FontWeight="Bold" FontSize="30" />
            <Button Content="Skill" x:Name="button2" Width="250" Height="100" Background="#FF2F4F4F" Foreground="White" FontWeight="Bold"  FontSize="30"/>
        </StackPanel>
    </Grid>
</Window>