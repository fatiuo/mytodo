<Window x:Class="wpfui.mytodo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfui"
        mc:Ignorable="d"
        Title="mytodo" Height="450" Width="420">
    <Grid>
        <DataGrid x:Name="TaskGrid" AutoGenerateColumns="False" Background = "#FFFAEBD7">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                <DataGridTextColumn Header="Detail" Binding="{Binding Details}" />
                <DataGridTextColumn Header="DateMake" Binding="{Binding DateMake}" />
                <DataGridTextColumn Header="DueDate" Binding="{Binding DueDate}" />
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Window>
